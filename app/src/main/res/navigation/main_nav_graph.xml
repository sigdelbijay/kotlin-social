<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/main_nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.kotlin_social.ui.main.fragments.HomeFragment"
        android:label="HomeFragment" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.kotlin_social.ui.main.fragments.ProfileFragment"
        android:label="ProfileFragment" />
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.kotlin_social.ui.main.fragments.SearchFragment"
        android:label="SearchFragment" />
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.kotlin_social.ui.main.fragments.SettingsFragment"
        android:label="SettingsFragment" />
    <fragment
        android:id="@+id/createPostFragment"
        android:name="com.example.kotlin_social.ui.main.fragments.CreatePostFragment"
        android:label="CreatePostFragment" />

    <action android:id="@+id/globalActionToCreatePostFragment"
        app:destination="@+id/createPostFragment"/>

    <action android:id="@+id/globalActionToOthersProfileFragment"
        app:destination="@+id/othersProfileFragment"/>

    <fragment
        android:id="@+id/othersProfileFragment"
        android:name="com.example.kotlin_social.ui.main.fragments.OthersProfileFragment"
        android:label="OthersProfileFragment" >
        <argument
            android:name="uid"
            app:argType="string" />
    </fragment>
</navigation>